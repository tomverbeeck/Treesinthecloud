<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.user.treesinthecloud.Routes.NewRouteDescriptionTree">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Description Tree"
        android:textSize="20dp"
        android:id="@+id/Textview_new_route_new_tree"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/Edittext_new_route_new_tree"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tree"
        android:id="@+id/button_new_route_add_tree"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="addTreeToRoute"/>

</LinearLayout>
