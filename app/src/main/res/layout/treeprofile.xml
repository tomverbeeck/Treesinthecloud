<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/longitutde">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/longValue"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ° N"
        android:id="@+id/unitLong"
        android:layout_alignTop="@+id/longValue"
        android:layout_toRightOf="@+id/longValue"
        android:layout_toEndOf="@+id/longValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/latValue"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/longValue"
        android:layout_alignLeft="@+id/longValue"
        android:layout_alignStart="@+id/longValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ° W"
        android:id="@+id/unitLat"
        android:layout_alignTop="@+id/latValue"
        android:layout_alignLeft="@+id/unitLong"
        android:layout_alignStart="@+id/unitLong" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/String_specie"
        android:id="@+id/specie"
        android:layout_below="@+id/latValue"
        android:layout_alignLeft="@+id/latValue"
        android:layout_alignStart="@+id/latValue"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/specieValue"
        android:layout_alignTop="@+id/specie"
        android:layout_toRightOf="@+id/specie"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/specie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/String_status"
        android:id="@+id/status"
        android:layout_below="@+id/specie"
        android:layout_alignLeft="@+id/specie"
        android:layout_alignStart="@+id/specie"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/statusValue"
        android:layout_alignTop="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/status" />

</RelativeLayout>